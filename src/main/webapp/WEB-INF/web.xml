<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    
      <servlet>
        <!-- first alias, private to config -->
        <servlet-name>AuthorController</servlet-name>
        <servlet-class>edu.wctc.mgp.bookwebapp2.controller.AuthorController</servlet-class>
        <!-- must be last item in servlet config -->
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>BookController</servlet-name>
        <servlet-class>edu.wctc.mgp.bookwebapp2.controller.BookController</servlet-class>
    </servlet>
    <servlet-mapping>
        <!-- reference private config alias -->
        <servlet-name>AuthorController</servlet-name>
        <!-- second alias is the one you use in your links -->
        <url-pattern>/AuthorController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookController</servlet-name>
        <url-pattern>/BookController</url-pattern>
    </servlet-mapping>
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
